primeiro = int(input("Qual o Primeiro Termo: "))
razao = int(input("Qual a Razao: "))

termo = primeiro
cont = 1
total = 0
mais = 10
while mais !=0:
    total = total + mais
    while cont <= total:
        print(termo,end=" ->")
        termo +=razao
        cont+=1
    mais = int(input("Mais quantos termos quer mostrar? "))
print("FIM")